{% extends 'base.html.twig' %}

{% block title %}Détails de l'Emprunt{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row">
        <div class="col-md-6">
            <h1>Détails de l'Emprunt</h1>

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button_label|default('Emprunter') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="col-md-6">
            <h1 class="mt-4">Détails de l'Objet</h1>

            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-3">Id :</dt>
                        <dd class="col-sm-9">{{ objet.id }}</dd>

                        <dt class="col-sm-3">Nom :</dt>
                        <dd class="col-sm-9">{{ objet.nom }}</dd>

                        <dt class="col-sm-3">Description :</dt>
                        <dd class="col-sm-12">{{ objet.description }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
