{% extends 'base.html.twig' %}

{% block title %}Détails de l'Objet - {{ objet.nom }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Détails de l'Objet</h1>

        <div class="row mt-4">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-3">Id :</dt>
                    <dd class="col-sm-9">{{ objet.id }}</dd>

                    <dt class="col-sm-3">Nom :</dt>
                    <dd class="col-sm-9">{{ objet.nom }}</dd>

                    <dt class="col-sm-3">Description :</dt>
                    <dd class="col-sm-9">{{ objet.description }}</dd>
                </dl>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <a href="{{ path('app_objets_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_objets_edit', {'id': objet.id}) }}" class="btn btn-primary">Modifier</a>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                {{ include('objets/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
